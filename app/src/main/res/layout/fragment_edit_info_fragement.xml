<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".fragements.EditInfoFragement">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/background"
        >


        <EditText
            android:id="@+id/EditProfileEmail"
            android:layout_width="286dp"
            android:layout_height="55dp"
            android:layout_marginTop="40dp"
            android:layout_gravity="center"
            android:background="@drawable/input"
            android:ems="10"
            android:fontFamily="@font/montserrat_bold"

            android:inputType="textAutoComplete"

            android:textAlignment="center"
            android:textColor="#5962E1"
             />

        <EditText
            android:id="@+id/EditProfileName"
            android:layout_width="286dp"
            android:layout_height="55dp"
            android:layout_marginTop="40dp"
            android:layout_gravity="center"
            android:background="@drawable/input"
            android:ems="10"
            android:fontFamily="@font/montserrat_bold"

            android:inputType="textAutoComplete"

            android:textAlignment="center"
            android:textColor="#5962E1"
            />

        <Button
            android:id="@+id/updateInfoButton"
            android:layout_width="294dp"
            android:layout_height="71dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/button"
            android:fontFamily="@font/montserrat_bold"
            android:layout_gravity="center"
            android:text="Edit Profile Info"
            android:textColor="@color/white"
            android:textSize="20dp"
             />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="32dp"
            android:fontFamily="@font/montserrat_bold"
            android:text="Or "
            android:textSize="24dp"
            android:textColor="@color/white" />


        <EditText
            android:id="@+id/EditProfilePassword"
            android:layout_width="286dp"
            android:layout_height="55dp"
            android:layout_marginTop="32dp"
            android:layout_gravity="center"
            android:background="@drawable/input"
            android:ems="10"
            android:fontFamily="@font/montserrat_bold"
            android:hint="New Password"
            android:inputType="textAutoComplete"
            android:textColorHint="#5962E1"
            android:textAlignment="center"
            android:textColor="#5962E1"
            />

        <EditText
            android:id="@+id/EditProfileConfirmPassword"
            android:layout_width="286dp"
            android:layout_height="55dp"
            android:layout_marginTop="40dp"
            android:layout_gravity="center"
            android:background="@drawable/input"
            android:ems="10"
            android:fontFamily="@font/montserrat_bold"
            android:hint="Confirm New Password"
            android:inputType="textAutoComplete"
            android:textColorHint="#5962E1"
            android:textAlignment="center"
            android:textColor="#5962E1"
            />


        <Button
            android:id="@+id/updatePasswordButton"
            android:layout_width="294dp"
            android:layout_height="71dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/button"
            android:fontFamily="@font/montserrat_bold"
            android:layout_gravity="center"
            android:text="Update Password"
            android:textColor="@color/white"
            android:textSize="20dp"
            />




    </LinearLayout>



</FrameLayout>